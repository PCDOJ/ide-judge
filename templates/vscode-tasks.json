        {
            "label": "Auto: Build and Run",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/auto-run.sh",
            "args": ["${file}"],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
